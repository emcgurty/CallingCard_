
 
<% form_for :users do |f| -%>
  <p class=label1>
    Reset Password Request
  </p>
  

  <p class=label1>
    <label for="email">Email</label><br />
    <%= f.text_field :email %>
  </p>


  <p class=label1>
    <%= link_to "Cancel", login_path,{ :class=>"button_style" } %>
    <%= submit_tag 'Submit',{ :class=>"button_style" } %>
  </p>
<% end -%>